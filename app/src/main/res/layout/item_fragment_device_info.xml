<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="5dp"
    tools:context="com.example.bo.nixon.base.BaseMvpActivity"
    >
    <TextView
        android:id="@+id/device_text_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="8"
        android:padding="12dp"
        android:lines="1"
        android:textColor="@color/main_text_color"
        android:textSize="18sp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/device_text_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/main_text_color"
            android:background="@drawable/wheel_bg"
            android:gravity="right|center_vertical"
            android:textSize="14sp"
            />
        <ImageView
            android:id="@+id/device_frag_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrowenter"
            />
    </LinearLayout>
</LinearLayout>
