<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50.0dp"
    android:background="@drawable/shape_home_bg"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:textSize="10sp"
        android:text="NOTIFICATIONS"
        android:layout_weight="1.2"
        android:gravity="center|right"
        android:lines="1"
        android:textColor="@color/home_tag_select_color"
        android:layout_height="match_parent" />

    <com.example.bo.nixon.ui.view.SmartTextView
        android:id="@+id/main_tag_call_tv"
        android:layout_width="0dp"
        android:textSize="10sp"
        android:text="Call"
        android:layout_weight="1"
        android:gravity="center|right"
        android:textColor="@color/black"
        android:layout_height="match_parent" />

    <com.example.bo.nixon.ui.view.SmartTextView
        android:id="@+id/main_tag_message_tv"
        android:layout_width="0dp"
        android:textSize="10sp"
        android:text="Message"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_height="match_parent" />

    <com.example.bo.nixon.ui.view.SmartTextView
        android:id="@+id/main_tag_goal_tv"
        android:layout_width="0dp"
        android:textSize="10sp"
        android:text="Goal"
        android:layout_weight="1"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/main_tag_battery_show_tv"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="100%"
            android:textSize="10sp"
            android:layout_marginLeft="5.0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/main_tag_battery_img"
            android:layout_width="wrap_content"
            android:layout_marginLeft="4.0dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_battery_100"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>