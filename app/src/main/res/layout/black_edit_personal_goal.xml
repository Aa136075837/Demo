<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_text_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.bo.nixon.ui.activity.MainActivity"
    >

    <com.example.bo.nixon.ui.view.SmartTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:lines="3"
        android:text="@string/personal_goal"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/set_your_goal"
        android:textColor="@color/sup_text_color"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/act_ambitious_seek_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/act_ambitious_seek_text_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <!--  <SeekBar
              android:id="@+id/act_ambitious_seekbar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:max="39500"
              android:maxHeight="3dp"
              android:minHeight="3dp"
              android:progress="9500"
              android:progressDrawable="@drawable/seekbar_style_1"
              android:thumb="@drawable/porfile_button_regulator_1"
              />-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="28dp"
                android:layout_marginTop="18dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:src="@drawable/seekbar_style_2"/>

            <com.example.smartcustomview.views.seekbar.BubbleSeekBar
                android:id="@+id/act_ambitious_seekbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:maxHeight="3dp"
                android:minHeight="3dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:bsb_progress="9500"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
