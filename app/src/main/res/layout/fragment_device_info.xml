<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    >
    <FrameLayout
        android:id="@+id/device_info_fram"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/device_frag_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/device_frag_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/icon_small_arrow"
                    />
                <TextView
                    android:layout_toRightOf="@+id/device_frag_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="@string/return_to_setting"
                    android:textColor="@color/sup_text_color"
                    />
                <TextView
                    android:id="@+id/device_info_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="170dp"
                    android:textColor="@color/sup_text_color"
                    />
            </RelativeLayout>

            <ListView
                android:id="@+id/device_frag_list"
                android:layout_width="match_parent"
                android:divider="@null"
                android:layout_height="match_parent"
                >

            </ListView>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
