<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ic"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:background="@drawable/shape_play_item_black"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/dialog_tip_img"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/dialog_message_tv"
        android:layout_width="match_parent"
        android:layout_height="100.0dp"
        android:gravity="center"
        android:padding="10.0dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="@color/black_dialog_line"
        />

    <TextView
        android:id="@+id/dialog_ok_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_dialog_left_black"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/ok"
        android:textColor="@color/dialog_btn_text"
        android:textSize="18sp"
        />
</LinearLayout>