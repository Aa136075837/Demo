<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:descendantFocusability="afterDescendants"
    android:fitsSystemWindows="true"
    tools:context="com.example.bo.nixon.ui.activity.MainActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.example.bo.nixon.ui.view.SmartTextView
            android:id="@+id/edit_watch_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:gravity="center"
            android:lines="3"
            android:text="@string/name_your_watch"
            android:textColor="@color/main_text_color"
            android:textSize="35sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_watch_tip"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/frag_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@null"
                android:descendantFocusability="beforeDescendants"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:hint="@string/edit_name_hint"
                android:textColor="@color/main_text_color"
                android:textColorHint="@color/sup_text_color"
                android:textCursorDrawable="@null"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/seek_bar_color"
                android:gravity="center_horizontal"
                >

            </View>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>