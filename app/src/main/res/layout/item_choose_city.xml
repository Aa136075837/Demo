<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        >
        <com.example.bo.nixon.ui.view.SmartTextView
            android:id="@+id/item_choose_city_abbre"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <com.example.bo.nixon.ui.view.SmartTextView
            android:id="@+id/item_choose_zone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/sup_text_color"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        >
        <com.example.bo.nixon.ui.view.SmartTextView
            android:id="@+id/item_choose_city_reg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
        <com.example.bo.nixon.ui.view.SmartTextView
            android:id="@+id/item_choose_city_country"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:lines="1"
            android:textColor="@color/sup_text_color"
            android:textSize="18sp"
            />
    </LinearLayout>
</LinearLayout>