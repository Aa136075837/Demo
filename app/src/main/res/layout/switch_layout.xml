<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_kaiguan_layout"
    android:layout_width="60.0dp"
    android:layout_height="35.0dp"
    android:padding="5dp"
    android:background="@drawable/smart_switch_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_kaiguan_close"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:src="@drawable/switch_btn_nor"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_kaiguan_open"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:src="@drawable/switch_btn_sel"
        android:visibility="gone" />
</LinearLayout>