<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0.0dp"
    android:layout_weight="1.2"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30.0dp"
        android:gravity="center"
        android:textColor="@color/home_tag_select_color"
        android:text="ACTIVITY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20.0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_middle_step_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="- - -"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/main_middle_step_unit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/home_step"
                android:textColor="@color/home_tag_select_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_middle_distance_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="- - -"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/main_middle_distance_unit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/home_distance"
                android:textColor="@color/home_tag_select_color"
                android:gravity="center"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_middle_cal_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="- - -"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/main_middle_cal_unit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/home_cal"
                android:textColor="@color/home_tag_select_color"
                android:gravity="center"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>