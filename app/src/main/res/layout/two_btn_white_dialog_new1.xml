<com.example.smartcustomview.views.shadow.ZDepthShadowLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ic"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:orientation="vertical"
    app:z_depth="z_depth5"
    app:z_depth_paddingTop="z_depth5"
    app:z_depth_shape="rect"
    app:z_depth_animDuration="150"
    app:z_depth_doAnim="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_shadow"
        >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@color/main_text_color"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/dialog_message_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/dialog_btn_frame"
            android:layout_below="@+id/dialog_title"
            android:gravity="top|center"
            android:padding="10.0dp"
            android:textColor="@color/main_text_color"
            android:textSize="18sp"
            android:lineSpacingMultiplier = "1.2"
            />

        <FrameLayout
            android:id="@+id/dialog_btn_frame"
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50.0dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/dialog_confirm_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/yes"
                    android:textStyle="bold"
                    android:textColor="@color/sup_color"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/dialog_cancel_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/no"
                    android:textStyle="bold"
                    android:textColor="@color/sup_color"
                    android:textSize="20sp"
                    />

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>
</com.example.smartcustomview.views.shadow.ZDepthShadowLayout>