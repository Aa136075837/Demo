<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/bg_color"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <com.example.smartcustomview.views.slide.MySlipeItem
        android:id="@+id/item_alarm_slipe"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/sup_text_color"
                android:gravity="center"
                android:text="@string/contact_btn_delete"
                android:textColor="@color/sup_color"
                />
        </LinearLayout>
        <com.example.bo.nixon.ui.view.AlarmEventItemView
            android:id="@+id/item_alarm_event_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            >
        </com.example.bo.nixon.ui.view.AlarmEventItemView>
    </com.example.smartcustomview.views.slide.MySlipeItem>


</LinearLayout>