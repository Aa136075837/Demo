<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.example.bo.nixon.base.BaseMvpActivity"
    >
    <com.example.bo.nixon.ui.view.SmartTextView
        android:id="@+id/calibration_pager_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/calibration_pager_num2"
        android:textColor="@color/sup_text_color"
        />
    <com.example.bo.nixon.ui.view.SmartTextView
        android:id="@+id/calibration_2_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/calibration_pager_tip2"
        android:textColor="@color/main_text_color"
        android:textSize="18sp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/calibration_pager_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:layout_marginTop="30dp"
            android:src="@drawable/img_clock1"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.example.bo.nixon.ui.view.SmartTextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginTop="96dp"
                android:text="@string/calibration_clock_wise"
                android:layout_marginRight="18dp"
                android:textColor="@color/main_text_color"
                android:textSize="12sp"
                />
            <com.example.bo.nixon.ui.view.SmartTextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="48dp"
                android:text="@string/calibration_clock_wise_anti"
                android:layout_marginRight="18dp"
                android:textColor="@color/main_text_color"
                android:textSize="12sp"
                />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
