<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/about_frag_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/about_frag_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_small_arrow"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/return_to_setting"
            android:textColor="@color/sup_text_color"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/about"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160.0dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/splash_icon"
            />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/about_app_layout"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/about_app_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dp"
            android:text="App version"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <View
                android:id="@+id/app_new_version_red"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/peraonal_dot_sel"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10.0dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/about_app_version_name_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:paddingRight="10.0dp"
                android:text="V1.0.1"
                android:textColor="#e2e2e2"
                android:textSize="16sp"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_firmware_layout"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/about_firmware_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dp"
            android:text="Firmware Version"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <View
                android:id="@+id/fw_new_version_red"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/peraonal_dot_sel"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10.0dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/about_firmware_version_name_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:paddingRight="10.0dp"
                android:text="disconnect"
                android:textColor="#e2e2e2"
                android:textSize="16sp"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>