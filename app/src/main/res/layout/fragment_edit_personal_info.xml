<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    tools:context="com.example.bo.nixon.ui.activity.MainActivity"
    >
    <LinearLayout
        android:id="@+id/edit_personal_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/frag_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_small_arrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/sup_text_color"
            android:text="@string/return_to_profile"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/edit_personal_info_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edit_personal_toolbar"
        >
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/personal_dot_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/personal_dot1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/peraonal_dot_bg"
            android:padding="1dp"
            android:src="@drawable/peraonal_dot_sel"
            />
        <ImageView
            android:id="@+id/personal_dot2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/peraonal_dot_bg"
            android:padding="1dp"
            android:src="@drawable/peraonal_dot_nor"
            />
        <ImageView
            android:id="@+id/personal_dot3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/peraonal_dot_bg"
            android:padding="1dp"
            android:src="@drawable/peraonal_dot_nor"
            />
        <ImageView
            android:id="@+id/personal_dot4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/peraonal_dot_bg"
            android:padding="1dp"
            android:src="@drawable/peraonal_dot_nor"
            />
        <ImageView
            android:id="@+id/personal_dot5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/peraonal_dot_bg"
            android:padding="1dp"
            android:src="@drawable/peraonal_dot_nor"
            />
    </LinearLayout>
</RelativeLayout>
