<?xml version="1.0" encoding="utf-8"?>
<com.example.smartcustomview.views.shadow.ZDepthShadowLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ic"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    app:z_depth="z_depth5"
    app:z_depth_animDuration="150"
    app:z_depth_doAnim="true"
    app:z_depth_paddingTop="z_depth5"
    app:z_depth_shape="rect"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180.0dp"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1111111111111111111111111111111111111111"
                android:textColor="@color/bg_color"
                />

            <com.example.bo.nixon.ui.view.SmartTextView
                android:id="@+id/ota_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20.0dp"
                android:gravity="center"
                android:text="Upgrading"
                android:textColor="@color/main_text_color"
                android:textSize="17sp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20.0dp"
            android:layout_marginRight="20.0dp"
            android:layout_marginTop="60.0dp"
            android:orientation="vertical"
            >

            <com.example.bo.nixon.ui.view.SmartTextView
                android:id="@+id/ota_progress_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="00%"
                android:textColor="@color/main_text_color"
                android:textSize="16sp"
                />

            <ProgressBar
                android:id="@+id/ota_progress"
                android:layout_width="match_parent"
                android:layout_height="3.0dp"
                android:max="100"
                android:progressDrawable="@drawable/layer_ota_progress"
                android:visibility="visible"
                style="?android:attr/progressBarStyleHorizontal"
                />
        </LinearLayout>
    </LinearLayout>
</com.example.smartcustomview.views.shadow.ZDepthShadowLayout>