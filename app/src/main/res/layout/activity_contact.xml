<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.bo.nixon.ui.activity.LoginActivity"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/contact_listview"
            android:layout_width="match_parent"
            android:divider="@null"
            android:layout_height="match_parent"
            >
        </ListView>

        <com.example.bo.nixon.ui.view.SideBar
            android:id="@+id/sidebar"
            android:layout_width="30.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:layout_marginTop="30dp"
            android:background="@color/transparent"
            />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/contact_popu_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:text="Confirm"
            android:textSize="16sp"
            android:textColor="@color/sup_color"
            />
        <TextView
            android:id="@+id/contact_popu_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/contact_popu_ok"
            android:padding="10dp"
            android:text="Cancel"
            android:textColor="@color/main_text_color"
            />
    </RelativeLayout>
</LinearLayout>
