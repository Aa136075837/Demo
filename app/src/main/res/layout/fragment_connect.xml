<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.example.bo.nixon.base.BaseMvpActivity"
    >
    <RelativeLayout
        android:id="@+id/anim_img_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/conn_frag_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/conn_frag_title"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/img1"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="96dp"
            android:src="@drawable/img_bg5"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/img2"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="96dp"
            android:src="@drawable/img_bg4"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="96dp"
            android:src="@drawable/img_bg3"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/img4"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="96dp"
            android:src="@drawable/img_bg2"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/img5"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="96dp"
            android:src="@drawable/img_bg1"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/img6"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="96dp"
            android:src="@drawable/img_bg1"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/img7"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="96dp"
            android:src="@drawable/img_point"
            />
        <TextView
            android:layout_toRightOf="@+id/img7"
            android:id="@+id/conn_connecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:text="@string/connect_connecting"
            android:textColor="@color/main_text_color"
            android:textSize="40sp"
            />

    </RelativeLayout>

</RelativeLayout>
