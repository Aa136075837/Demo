<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white"
    tools:context="com.example.bo.nixon.base.BaseMvpActivity"
    >
    <TextView
        android:id="@+id/personal_key"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:padding="12dp"
        android:textColor="@color/text_color"
        android:textSize="25sp"
        />
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <LinearLayout
            android:id="@+id/personal_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/personal_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="12dp"
                android:lines="1"
                android:paddingTop="12dp"
                android:textColor="@color/main_text_color"
                android:textSize="25sp"
                />
            <TextView
                android:id="@+id/personal_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="12dp"
                android:text="@string/personal_edit"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >
            <com.example.bo.nixon.ui.view.SmartSwitchView
                android:id="@+id/personal_switch"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:src="@drawable/switch_btn"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
