<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context="com.example.bo.nixon.base.BaseMvpActivity"
    >
    <FrameLayout
        android:id="@+id/ble_near_by_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/ble_near_by_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/title_near"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/ble_near_by_title"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    />
                <ImageView
                    android:id="@+id/ble_near_sel_refresh"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignLeft="@+id/title_near"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/icon_refresh_black"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <!--<android.support.v4.widget.SwipeRefreshLayout-->
            <!--android:id="@+id/ble_near_by_refresh"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:scrollbars="vertical"-->
            <!--&gt;-->
            <ListView
                android:id="@+id/ble_near_by_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                >
            </ListView>
            <!--</android.support.v4.widget.SwipeRefreshLayout>-->
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/connect_connecting_show_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >
        <RelativeLayout
            android:id="@+id/anim_img_rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/conn_frag_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/conn_frag_title"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                />
            <ImageView
                android:id="@+id/img1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="96dp"
                android:src="@drawable/img_bg1"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/img2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="96dp"
                android:src="@drawable/img_bg1"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/img3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="96dp"
                android:src="@drawable/img_bg1"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/img4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="96dp"
                android:src="@drawable/img_bg1"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/img5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="96dp"
                android:src="@drawable/img_bg1"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/img6"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="96dp"
                android:src="@drawable/img_bg1"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/img7"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="96dp"
                android:src="@drawable/img_point"
                />
            <TextView
                android:id="@+id/conn_connecting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/img7"
                android:gravity="left"
                android:text="@string/connect_connecting"
                android:textColor="@color/main_text_color"
                android:textSize="40sp"
                />

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
