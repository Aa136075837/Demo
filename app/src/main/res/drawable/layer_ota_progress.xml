
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="0"
                android:centerColor="#ff747674"
                android:centerY="0.75"
                android:endColor="#ff747674"
                android:startColor="#ff747674" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerColor="@color/sup_color"
                    android:centerY="0.75"
                    android:endColor="@color/sup_color"
                    android:startColor="@color/sup_color" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:endColor="@color/sup_color"
                    android:startColor="@color/sup_color" />
            </shape>
        </clip>
    </item>

</layer-list>