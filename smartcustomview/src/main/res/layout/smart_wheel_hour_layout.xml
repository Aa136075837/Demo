<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smart_wheel_time_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <com.example.smartcustomview.views.WheelView
                android:id="@+id/wheel_after"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <com.example.smartcustomview.views.WheelView
                android:id="@+id/wheel_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/smart_wheel_time_tv_hour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:layout_marginRight="15dp"
                android:gravity="center|right"
                android:paddingTop="2.0dp"
                android:textStyle="bold"
                android:text=":"
                android:textColor="@color/text_black"
                android:textSize="30sp"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <com.example.smartcustomview.views.WheelView
                android:id="@+id/wheel_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/smart_wheel_time_tv_min"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:layout_marginRight="35dp"
                android:gravity="center|right"
                android:paddingTop="2.0dp"
                android:text="@string/time_set_min_simple"
                android:textColor="#f49e51"
                android:textSize="15sp"
                android:visibility="gone"
                />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>